{
  "name": "lineage-incremental-tests",
  "version": "1.0.0",
  "description": "Testing setup for Lineage Incremental game",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "."
    ],
    "collectCoverageFrom": [
      "modules/**/*.js",
      "utils.js",
      "constants.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "main": "constants.js",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mgcatalipse/legacy_incremental.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/mgcatalipse/legacy_incremental/issues"
  },
  "homepage": "https://github.com/mgcatalipse/legacy_incremental#readme"
}
